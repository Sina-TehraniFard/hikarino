{
  "name": "hikarino-monorepo",
  "version": "1.10.0",
  "private": true,
  "workspaces": [
    "frontend",
    "firebase-functions"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "start": "npm run start --workspace=frontend",
    "lint": "npm run lint --workspace=frontend",
    "prepare": "[ -d node_modules/husky ] && husky || true"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "firebase": "^11.6.1",
    "firebase-functions": "^6.3.2",
    "lottie-react": "^2.4.1",
    "next": "^15.5.4",
    "openai": "^4.96.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "stripe": "^18.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.5",
    "tailwindcss": "^4",
    "typescript": "^5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sina-TehraniFard/hikarino.git"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
